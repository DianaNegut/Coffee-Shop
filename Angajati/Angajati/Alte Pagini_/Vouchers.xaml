                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150" />
                            <ColumnDefinition Width="410"/>
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="110"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.Row="0"
                                Grid.RowSpan="2"
                                Background="#FFCFB298"
                                CornerRadius="40">
                        </Border>

                        <Border Grid.Column="0"
                                Grid.RowSpan="2"
                                Background="#4E341B"
                                CornerRadius="30,0,0,30">
                        </Border>

                        <Border Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Grid.RowSpan="2"
                                HorizontalAlignment="Center"
                                Width="180"
                                CornerRadius="90"
                                Margin="0,0,250,0">
                            <Border.Background>
                                <ImageBrush ImageSource="/Images/cappuccino.jpg" Stretch="UniformToFill"/>
                            </Border.Background>
                        </Border>

                        <TextBlock Grid.Column="1"
                                   Grid.Row="0"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,10,20,0"
                                   Text="15% Reducere"
                                   Foreground="Black"
                                   FontSize="45"
                                   FontFamily="Oswald">
                        </TextBlock>

                        <TextBlock Grid.Column="1"
                                   Grid.Row="1"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Top"
                                   Margin="0,10,50,0"
                                   Text="la cappuccino-ul tau&#x0a;           preferat"
                                   Foreground="Black"
                                   FontSize="25"
                                   FontFamily="Oswald">
                        </TextBlock>

                        <TextBlock Grid.Column="0"
                                   Grid.Row="0"
                                   Grid.RowSpan="2"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Top"
                                   Margin="20,5,0,0"
                                   Text="S&#x0a;A&#x0a;L&#x0a;E"
                                   Foreground="White"
                                   FontSize="34"
                                   FontFamily="Oswald">
                        </TextBlock>
                    </Grid>
